<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navegação -->
    <% if (locals.user) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-car me-2"></i>
                Sistema de Carros
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cars">
                            <i class="fas fa-list me-1"></i>Carros
                        </a>
                    </li>
                    <% if (user.tipo_usuario === 'administrador') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/cars/new">
                            <i class="fas fa-plus me-1"></i>Novo Carro
                        </a>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/search">
                            <i class="fas fa-search me-1"></i>Buscar
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user.nome %>
                            <span class="badge bg-secondary ms-1"><%= user.tipo_usuario %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form method="POST" action="/logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <% } %>

    <!-- Mensagens Flash -->
    <% if (locals.success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (locals.error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Conteúdo Principal -->
    <main class="container my-4">
        <!-- Cabeçalho -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1 class="h2 mb-3">
                    <i class="fas fa-car text-primary me-2"></i>
                    Gerenciar Carros
                </h1>
                <p class="text-muted">Lista completa de carros cadastrados no sistema</p>
            </div>
            <div class="col-md-4 text-md-end">
                <% if (user.tipo_usuario === 'administrador') { %>
                <a href="/cars/new" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>Novo Carro
                </a>
                <% } %>
                <a href="/search" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-search me-2"></i>Buscar
                </a>
            </div>
        </div>

        <!-- Estatísticas -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-primary"><%= stats.total_carros || 0 %></h4>
                        <p class="mb-0">Total de Carros</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-success"><%= stats.total_fabricantes || 0 %></h4>
                        <p class="mb-0">Fabricantes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-info"><%= stats.total_tipos || 0 %></h4>
                        <p class="mb-0">Tipos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-warning"><%= stats.ano_mais_novo || 'N/A' %></h4>
                        <p class="mb-0">Ano Mais Novo</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Carros -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Lista de Carros
                        </h5>
                        <span class="badge bg-primary"><%= cars.length %> carros</span>
                    </div>
                    <div class="card-body">
                        <% if (cars.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-car fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">Nenhum carro encontrado</h4>
                                <p class="text-muted">Comece cadastrando o primeiro carro do sistema</p>
                                <% if (user.tipo_usuario === 'administrador') { %>
                                <a href="/cars/new" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Cadastrar Primeiro Carro
                                </a>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Modelo</th>
                                            <th>Fabricante</th>
                                            <th>Tipo</th>
                                            <th>Ano</th>
                                            <th>Combustível</th>
                                            <th>Preço</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% cars.forEach(car => { %>
                                        <tr>
                                            <td>
                                                <strong><%= car.modelo %></strong>
                                                <% if (car.cor) { %>
                                                <br><small class="text-muted"><%= car.cor %></small>
                                                <% } %>
                                            </td>
                                            <td><%= car.fabricante %></td>
                                            <td>
                                                <span class="badge bg-secondary"><%= car.tipo %></span>
                                            </td>
                                            <td><%= car.ano_fabricacao %></td>
                                            <td>
                                                <% 
                                                let badgeClass = 'bg-warning';
                                                if (car.combustivel === 'Elétrico') badgeClass = 'bg-success';
                                                else if (car.combustivel === 'Híbrido') badgeClass = 'bg-info';
                                                %>
                                                <span class="badge <%= badgeClass %>"><%= car.combustivel %></span>
                                            </td>
                                            <td>
                                                <% if (car.preco) { %>
                                                R$ <%= parseFloat(car.preco).toLocaleString('pt-BR') %>
                                                <% } else { %>
                                                <span class="text-muted">N/A</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/cars/<%= car.id %>" class="btn btn-outline-info" title="Ver Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <% if (user.tipo_usuario === 'administrador') { %>
                                                    <a href="/cars/<%= car.id %>/edit" class="btn btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            onclick="deleteCar(<%= car.id %>, '<%= car.fabricante %> <%= car.modelo %>')" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal de Confirmação de Exclusão -->
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                            Confirmar Exclusão
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Tem certeza que deseja excluir <strong id="carToDelete"></strong>?</p>
                        <p class="text-muted">Esta ação não pode ser desfeita.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <form id="deleteForm" method="POST" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Excluir Carro
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Rodapé -->
    <footer class="bg-dark text-light py-3 mt-5">
        <div class="container text-center">
            <p class="mb-0">
                <i class="fas fa-car me-2"></i>
                Sistema de Gerenciamento de Carros &copy; 2024
            </p>
            <small class="text-muted">Aplicação Monolítica Educacional</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
    function deleteCar(carId, carName) {
        document.getElementById('carToDelete').textContent = carName;
        document.getElementById('deleteForm').action = '/cars/' + carId;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
    </script>
</body>
</html>
