<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carros - Sistema de Carros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-microchip me-2"></i>Car Microservices
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i><%= user.name %>
                        <% if (user.role === 'admin') { %>
                        <span class="badge bg-warning ms-1">Admin</span>
                        <% } %>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <form action="/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Alerts -->
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show m-0" role="alert">
        <i class="fas fa-check-circle me-2"></i><%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show m-0" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>

    <div class="container py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="display-6 fw-bold">
                        <i class="fas fa-car me-2 text-primary"></i>Carros
                    </h1>
                    <% if (user.role === 'admin') { %>
                    <a href="/cars/new" class="btn btn-success btn-lg">
                        <i class="fas fa-plus me-2"></i>Novo Carro
                    </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Search -->
        <div class="row mb-4">
            <div class="col-12">
                <form method="GET" action="/cars">
                    <div class="input-group input-group-lg">
                        <input type="text" class="form-control" name="search" 
                               placeholder="Buscar por marca ou modelo..." 
                               value="<%= search || '' %>">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                        <% if (search) { %>
                        <a href="/cars" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>

        <!-- Cars Grid -->
        <% if (cars && cars.length > 0) { %>
        <div class="row">
            <% cars.forEach(car => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-car me-2 text-primary"></i>
                            <%= car.marca %> <%= car.modelo %>
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <strong>Ano:</strong> <%= car.ano %>
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-palette me-1"></i>
                                    <strong>Cor:</strong> <%= car.cor %>
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <span class="h5 text-success">
                                <i class="fas fa-dollar-sign me-1"></i>
                                R$ <%= car.preco.toLocaleString('pt-BR') %>
                            </span>
                        </div>

                        <div class="mb-3">
                            <span class="badge bg-<%= car.disponivel ? 'success' : 'secondary' %> fs-6">
                                <i class="fas fa-<%= car.disponivel ? 'check' : 'times' %> me-1"></i>
                                <%= car.disponivel ? 'Disponível' : 'Indisponível' %>
                            </span>
                        </div>

                        <% if (user.role === 'admin') { %>
                        <div class="btn-group w-100" role="group">
                            <a href="/cars/<%= car.id %>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Editar
                            </a>
                            <form method="POST" action="/cars/<%= car.id %>" class="d-inline flex-fill" 
                                  onsubmit="return confirm('Tem certeza que deseja deletar este carro?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="fas fa-trash me-1"></i>Deletar
                                </button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <% if (pagination && pagination.pages > 1) { %>
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Paginação">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.page > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/cars?page=<%= pagination.page - 1 %>&search=<%= search || '' %>">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        <% } %>

                        <% for (let i = 1; i <= pagination.pages; i++) { %>
                        <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                            <a class="page-link" href="/cars?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
                        </li>
                        <% } %>

                        <% if (pagination.page < pagination.pages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/cars?page=<%= pagination.page + 1 %>&search=<%= search || '' %>">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
        <% } %>

        <% } else { %>
        <!-- No Cars -->
        <div class="row">
            <div class="col-12 text-center">
                <div class="py-5">
                    <i class="fas fa-car fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">Nenhum carro encontrado</h3>
                    <% if (search) { %>
                    <p class="text-muted">
                        Tente buscar com outros termos ou 
                        <a href="/cars" class="text-decoration-none">ver todos os carros</a>.
                    </p>
                    <% } else { %>
                    <p class="text-muted">
                        <% if (user.role === 'admin') { %>
                        Que tal <a href="/cars/new" class="text-decoration-none">adicionar o primeiro carro</a>?
                        <% } else { %>
                        Não há carros cadastrados no momento.
                        <% } %>
                    </p>
                    <% } %>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Summary -->
        <% if (pagination) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <p class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Mostrando <strong><%= cars.length %></strong> de <strong><%= pagination.total %></strong> carros
                            <% if (search) { %>
                            para "<strong><%= search %></strong>"
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>
