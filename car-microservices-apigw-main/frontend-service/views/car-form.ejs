<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= car ? 'Editar' : 'Novo' %> Carro - Sistema de Carros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-microchip me-2"></i>Car Microservices
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
                <a class="nav-link" href="/cars">
                    <i class="fas fa-car me-1"></i>Carros
                </a>
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i><%= user.name %>
                        <span class="badge bg-warning ms-1">Admin</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <form action="/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Error Alert -->
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show m-0" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>

    <div class="container py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-6 fw-bold">
                    <i class="fas fa-<%= car ? 'edit' : 'plus' %> me-2 text-primary"></i>
                    <%= car ? 'Editar' : 'Novo' %> Carro
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/cars">Carros</a></li>
                        <li class="breadcrumb-item active"><%= car ? 'Editar' : 'Novo' %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <form action="<%= action %>" method="POST">
                            <% if (method === 'PUT') { %>
                            <input type="hidden" name="_method" value="PUT">
                            <% } %>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="marca" class="form-label fw-semibold">
                                        <i class="fas fa-tag me-1 text-primary"></i>Marca *
                                    </label>
                                    <input type="text" class="form-control form-control-lg" 
                                           id="marca" name="marca" 
                                           value="<%= car ? car.marca : '' %>" 
                                           placeholder="Ex: Toyota, Honda, Ford..."
                                           required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="modelo" class="form-label fw-semibold">
                                        <i class="fas fa-car me-1 text-primary"></i>Modelo *
                                    </label>
                                    <input type="text" class="form-control form-control-lg" 
                                           id="modelo" name="modelo" 
                                           value="<%= car ? car.modelo : '' %>" 
                                           placeholder="Ex: Corolla, Civic, Focus..."
                                           required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="ano" class="form-label fw-semibold">
                                        <i class="fas fa-calendar me-1 text-primary"></i>Ano *
                                    </label>
                                    <input type="number" class="form-control form-control-lg" 
                                           id="ano" name="ano" 
                                           value="<%= car ? car.ano : '' %>" 
                                           min="1900" max="2030" 
                                           placeholder="Ex: 2023"
                                           required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="cor" class="form-label fw-semibold">
                                        <i class="fas fa-palette me-1 text-primary"></i>Cor *
                                    </label>
                                    <select class="form-select form-select-lg" id="cor" name="cor" required>
                                        <option value="">Selecione uma cor</option>
                                        <option value="Branco" <%= car && car.cor === 'Branco' ? 'selected' : '' %>>Branco</option>
                                        <option value="Preto" <%= car && car.cor === 'Preto' ? 'selected' : '' %>>Preto</option>
                                        <option value="Prata" <%= car && car.cor === 'Prata' ? 'selected' : '' %>>Prata</option>
                                        <option value="Azul" <%= car && car.cor === 'Azul' ? 'selected' : '' %>>Azul</option>
                                        <option value="Vermelho" <%= car && car.cor === 'Vermelho' ? 'selected' : '' %>>Vermelho</option>
                                        <option value="Verde" <%= car && car.cor === 'Verde' ? 'selected' : '' %>>Verde</option>
                                        <option value="Amarelo" <%= car && car.cor === 'Amarelo' ? 'selected' : '' %>>Amarelo</option>
                                        <option value="Cinza" <%= car && car.cor === 'Cinza' ? 'selected' : '' %>>Cinza</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="preco" class="form-label fw-semibold">
                                        <i class="fas fa-dollar-sign me-1 text-primary"></i>Preço (R$) *
                                    </label>
                                    <input type="number" class="form-control form-control-lg" 
                                           id="preco" name="preco" 
                                           value="<%= car ? car.preco : '' %>" 
                                           min="1" step="0.01" 
                                           placeholder="Ex: 85000.00"
                                           required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="disponivel" class="form-label fw-semibold">
                                        <i class="fas fa-check-circle me-1 text-primary"></i>Status
                                    </label>
                                    <select class="form-select form-select-lg" id="disponivel" name="disponivel">
                                        <option value="1" <%= !car || car.disponivel === 1 ? 'selected' : '' %>>Disponível</option>
                                        <option value="0" <%= car && car.disponivel === 0 ? 'selected' : '' %>>Indisponível</option>
                                    </select>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex justify-content-between">
                                <a href="/cars" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Voltar
                                </a>
                                <button type="submit" class="btn btn-<%= car ? 'primary' : 'success' %> btn-lg">
                                    <i class="fas fa-<%= car ? 'save' : 'plus' %> me-2"></i>
                                    <%= car ? 'Atualizar' : 'Criar' %> Carro
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Preview Card -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-eye me-2"></i>Preview do Carro
                        </h6>
                    </div>
                    <div class="card-body">
                        <div id="car-preview" class="text-center text-muted">
                            <i class="fas fa-car fa-2x mb-2"></i>
                            <p class="mb-0">Preencha os campos para ver o preview</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Preview functionality
        function updatePreview() {
            const marca = document.getElementById('marca').value;
            const modelo = document.getElementById('modelo').value;
            const ano = document.getElementById('ano').value;
            const cor = document.getElementById('cor').value;
            const preco = document.getElementById('preco').value;
            const disponivel = document.getElementById('disponivel').value;

            const preview = document.getElementById('car-preview');

            if (marca && modelo) {
                const precoFormatted = preco ? parseFloat(preco).toLocaleString('pt-BR') : '0';
                const status = disponivel === '1' ? 'Disponível' : 'Indisponível';
                const statusClass = disponivel === '1' ? 'success' : 'secondary';

                preview.innerHTML = `
                    <div class="text-start">
                        <h5 class="mb-3">
                            <i class="fas fa-car me-2 text-primary"></i>
                            ${marca} ${modelo}
                        </h5>
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <strong>Ano:</strong> ${ano || 'N/A'}
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-palette me-1"></i>
                                    <strong>Cor:</strong> ${cor || 'N/A'}
                                </small>
                            </div>
                        </div>
                        <div class="mt-2">
                            <span class="h5 text-success">
                                <i class="fas fa-dollar-sign me-1"></i>
                                R$ ${precoFormatted}
                            </span>
                            <span class="badge bg-${statusClass} ms-2">${status}</span>
                        </div>
                    </div>
                `;
            } else {
                preview.innerHTML = `
                    <i class="fas fa-car fa-2x mb-2"></i>
                    <p class="mb-0">Preencha os campos para ver o preview</p>
                `;
            }
        }

        // Add event listeners
        ['marca', 'modelo', 'ano', 'cor', 'preco', 'disponivel'].forEach(id => {
            document.getElementById(id).addEventListener('input', updatePreview);
        });

        // Initial preview update
        updatePreview();

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const isEdit = submitBtn.textContent.includes('Atualizar');
            
            submitBtn.innerHTML = `<i class="fas fa-spinner fa-spin me-2"></i>${isEdit ? 'Atualizando' : 'Criando'}...`;
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>
